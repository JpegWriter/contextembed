# ============================================
# ContextEmbed Environment Configuration
# Copy this file to .env.local and fill in values
# ============================================

# Database (Supabase Postgres or local Postgres)
DATABASE_URL="postgresql://postgres:password@localhost:5432/contextembed?schema=public"

# Supabase (for auth and storage)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# OpenAI API
OPENAI_API_KEY="sk-..."

# Vision model configuration
VISION_MODEL="gpt-4o"
VISION_MAX_TOKENS=4096

# LLM model configuration  
LLM_MODEL="gpt-4o"
LLM_MAX_TOKENS=4096

# Storage configuration
# Options: "local" | "supabase" | "s3"
STORAGE_PROVIDER="local"
STORAGE_LOCAL_PATH="./uploads"

# S3-compatible storage (optional)
S3_ENDPOINT=""
S3_REGION="us-east-1"
S3_BUCKET=""
S3_ACCESS_KEY=""
S3_SECRET_KEY=""

# ExifTool configuration
EXIFTOOL_PATH="exiftool"

# Job processing
JOB_CONCURRENCY=3
JOB_POLL_INTERVAL=1000

# API configuration
API_PORT=3001
API_URL="http://localhost:3001"

# Web app configuration
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Rate limiting
RATE_LIMIT_UPLOADS_PER_MINUTE=30
RATE_LIMIT_JOBS_PER_MINUTE=20

# Security
JWT_SECRET="your-jwt-secret-min-32-chars"

# Development
NODE_ENV="development"

{
  "name": "contextembed",
  "version": "2.0.0",
  "private": true,
  "description": "Context-driven metadata embedding tool for images",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "db:generate": "pnpm --filter @contextembed/db db:generate",
    "db:push": "pnpm --filter @contextembed/db db:push",
    "db:migrate": "pnpm --filter @contextembed/db db:migrate",
    "clean": "turbo clean && rimraf node_modules",
    "iptc:audit": "node scripts/iptc-audit.mjs",
    "iptc:gate": "node scripts/iptc-audit.mjs --gate",
    "audit:embed": "npx ts-node scripts/audit-embed.ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "rimraf": "^5.0.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.14.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "exiftool-vendored": "^26.0.0"
  }
}
